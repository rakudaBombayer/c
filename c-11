#include <stdio.h>

int main(void)
{

	int n1;

	printf("バスの距離を入力せよ。");

	printf("整数A : ");
	fflush(0);
	scanf("%d", &n1);



	if (n1 >= 500 )
		printf("料金は1000円。\n");
	else if (n1 < 500 && n1 >=100)
		printf("料金は700円。\n");
	else if (n1 < 100 && n1 >= 50)
		printf("料金は500円。\n");
	else
		printf("料金は300円。\n");


	return 0;

}
